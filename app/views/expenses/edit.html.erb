<div class="container">
 <div class="card register">
 <h2> Update Expense </h2>
<%= form_with model: [current_user, @expense], local: true do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :amount %>
    <%= form.number_field :amount %>
  </div>

<div>
  <%= form.label :payment_type %>
  <%= form.select :payment_type, options_for_select([['PhonePe', 'phonepe'], ['Google Pay', 'googlepay'], ['Paytm', 'paytm'], ['Cash', 'cash']], form.object.payment_type), prompt: "Select Payment Type" %>
</div>


  <div class = "fsub">
    <%= form.submit "Update Expense" %>
  </div>
<% end %>
</div>
</div>